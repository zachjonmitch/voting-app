extends layout.pug

block content
    section(id="navigation")
            nav(class="menuLeft")
                ul
                    a(href="/")
                        li Home &nbsp /
                    a(href="/polls/trending")
                        li &nbsp Trending &nbsp /
                    a(href="/polls/recent")
                        li &nbsp Recent
            div(class="brandCenter") VotePlex
            nav(class="menuRight")

                if !user
                    a(href="/users/login") 
                        div(class="login") Login
                else
                    a(href="/users/logout") 
                        div(class="login") Logout


    section(id="dashboard")
        div(class="titleFlex")
            h1 Create | Vote | Share
            h2 Sign up to create and vote on custom polls
            a(href="/users/register")
                button Sign Up
        div(class="disclaimer")
            h4 Created by #[a(href="https://www.linkedin.com/in/zjmitche/") Zach Mitchell] | #[a(href="https://github.com/zjmitche/voting-app/") View on Github]


    section(id="examplePoll")
        div(class="pollBlueBackground")
        div(class="pollGreyBackground")
        div(class="pollCard")
            div(class="pollCardLeft")
                h2 What is your favorite color?
                div(class="pollColor") Blue
                div(class="pollColor") Red
                div(class="pollColor") Green
                div(class="pollColor") Purple
                div(class="pollColor") Yellow
                button(class="submit") Submit
                button(class="share") Share on Twitter
            div(class="graphRight")
                canvas(id="myChart" width="300" height="300")
                div(class="legend")
                    ul
                        li Yellow
                        li Purple
                        li Red
                        li Green
                        li Blue
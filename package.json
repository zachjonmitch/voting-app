{
  "name": "voting-app",
  "version": "1.0.0",
  "description": "Custom poll creation app",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js -e js,pug,css",
    "build": "npm run build-client && npm run build-server",
    "build-client": "start npm run build-scss && start npm run babel-client && start npm run build-js",
    "build-server": "start npm run babel-server",
    "build-scss": "sass --watch client/sass/styles.scss:client/dist/cssmin/styles.min.css --style compressed",
    "build-js": "onchange \"client/js/*.js\" -- npm run uglify",
    "uglify": "uglifyjs client/dist/jsmin/bundle.js -m -c -o client/dist/jsmin/bundle.min.js",
    "babel-client": "babel client/js --watch --out-file client/dist/jsmin/bundle.js",
    "babel-server": "babel server/routes --watch --out-dir server/build"
  },
  "author": "zjmitche",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.23.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.23.0",
    "express": "^4.15.2",
    "mongodb": "^2.2.24",
    "pug": "^2.0.0-beta.12"
  }
}
